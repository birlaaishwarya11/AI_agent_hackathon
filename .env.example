# LinkedIn Job Applier MCP Server Configuration
# Copy this file to .env and fill in your credentials

# LinkedIn Credentials (Required)
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password

# AI API Keys (At least one required for resume optimization)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Job Search Settings
MAX_APPLICATIONS_PER_DAY=10
JOB_SEARCH_KEYWORDS=software engineer,python developer,data scientist
PREFERRED_LOCATIONS=San Francisco,New York,Remote
MINIMUM_MATCH_SCORE=0.7

# Browser Settings
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30
CHROME_NO_SANDBOX=true
CHROME_DISABLE_DEV_SHM_USAGE=true

# Storage Settings
DATA_DIR=./data
RESUME_FILE=resume.pdf
LOGS_DIR=./logs

# Rate Limiting (to avoid LinkedIn detection)
REQUEST_DELAY_MIN=2
REQUEST_DELAY_MAX=5

# Resume Configuration
RESUME_OPTIMIZATION_LEVEL=moderate

# Application Settings
AUTO_APPLY_ENABLED=false
COVER_LETTER_TEMPLATE=./data/cover_letter_template.txt

# Free Deployment Options
RAILWAY_STATIC_URL=
RENDER_EXTERNAL_URL=
FLY_APP_NAME=